# Server Configuration
PORT=5500
NODE_ENV=development

# Database
DB_URI=mongodb://localhost:27017/subdub

# JWT
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Arcjet Configuration
ARCJET_KEY=your-arcjet-key
ARCJET_ENV=development

# Upstash Workflow Configuration
QSTASH_URL=https://qstash.upstash.io
QSTASH_TOKEN=your-qstash-token
QSTASH_CURRENT_SIGNING_KEY=your-current-signing-key
QSTASH_NEXT_SIGNING_KEY=your-next-signing-key

# Email Configuration (SMTP)
# For Gmail, use smtp.gmail.com with an App Password
# For other providers, use their SMTP settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM="SubDub Notifications" <your-email@gmail.com>

# Server URL (for workflow callbacks)
SERVER_URL=http://localhost:5500
